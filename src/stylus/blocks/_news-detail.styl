.news-detail
  &__date
    font-family Roboto
    font-size 1.4rem
    line-height 1.6rem
    color black
    opacity 0.4
    margin-bottom 2.4rem
  &__title
    margin-bottom 1.4rem
  &__text
    font-family Roboto
    font-size 1.4rem
    color black
    line-height 2.2rem
  &__content
    padding-bottom: 3rem
    border-bottom 1px solid #e2e2e2
    margin-bottom 4rem
  &__more
    &_block
      display flex
      justify-content: space-between
      align-items: flex-start
      flex-wrap wrap
    &_title
      color black
      font-size 1.8rem
    &_text
      color black

@media (max-width:570px)
  .news-detail
    &__more
      &_block
        display flex
        justify-content: center
    &__item
      flex-basis:100%
      max-width: 25rem
    &__item:nth-child(4)
      display none

