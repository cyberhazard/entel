.products
  padding 5rem 0 10rem
  background-color #F8F8F8
  &__content
    display flex
    justify-content: space-between
    flex-wrap: wrap
  &__item
    flex-basis 30%
    display flex
    flex-direction: column
    padding 0 5.6rem 3rem
    background-color white
    box-shadow: 0 1rem 2.4rem RGBA(0,0,0,0.1)
    margin-bottom 5rem
    cursor: pointer
    transition 0.3s
  &__imgwrap
    text-align: center
    transform: translateY(-3rem);
  &__title
    font-size 2rem
    font-family: Roboto
    font-weight: 700
    color black
    margin-bottom 1.4rem
    flex-grow: 1
    text-align: center
  &__footer
    text-align: center
  &__link
    font-size 1.4rem
    font-family: Roboto
    font-weight: 400
    color black
    border-bottom 1px dotted black
    display: inline-block
    position: relative
    transition 0.3s
    &:after
      content '\f105';
      font-family: FontAwesome
      font-size 1.4rem
      right -0.8rem
      top 1px
      position absolute
  &__img
    max-width: 20rem
    width 100%
    object-fit: cover

.products__item:hover .products__link
  color #1579C4
  border-bottom 1px dotted #1579C4

@media (max-width:1024px)
  .products
    &__content
      justify-content: space-around
    &__item
      flex-basis 40%
      padding 0 4rem 3rem
    &__title
      font-size 1.6rem
    &__link
      font-size 1.4rem
    &__img
      max-width: 17rem
@media (max-width:566px)
  .products
    padding 5rem 0 6rem
    &__content
      justify-content: space-around
    &__item
      flex-basis 100%
      padding 0 6rem 3rem
    &__title
      font-size 1.4rem
    &__link
      font-size 1.2rem
    &__img
      max-width: 16rem


