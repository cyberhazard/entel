.about-company
  background: #F8F8F8
  &__slider
    width: calc(100% - 8rem)
    margin 0 auto
    &_span
      position relative
      display block
      width 100%
    &_prev
      transform: translateX(-25%)
    &_next, &_prev
      background-image: none !important
      & svg
        width 3.8rem
    & .certif-mini__img
      max-width: none

  &__wrapper
    display flex
    justify-content: space-between
    align-items: flex-start
  &__sidebar
    width 26%
    flex-shrink: 0
    &_title
      transition 0.3s
      cursor pointer
      display block
      &:hover
        background: #F3F3F3
  &__content
    width 70%
    font-family Roboto
    font-weight: 400
    line-height 2.2rem
    font-size 1.4rem
    flex-shrink: 0
  &__title
    font-family: RobotoSlab
    font-weight: 700
    font-size 3rem
    line-height 3.8rem
    padding-bottom 2.4rem
    border-bottom 1px solid #D7D7D7
    margin-bottom 2.4rem
  &__subtitle
    font-weight 700
    font-size 1.6rem
    line-height 2.6rem
    margin-bottom 1.4rem
  &__text
    margin-bottom 1.4rem
    & span
      font-weight: 700
  &__okay
    padding-left 2.4rem
    position: relative
    margin-bottom 1.4rem
    &:before
      content '\f00c'
      top 0
      position: absolute
      font-size: 1.4rem
      left 0
      color #1174BF
      font-family FontAwesome
  &__block
    padding-bottom 2.4rem
    border-bottom 1px solid #D7D7D7
    margin-bottom 2.4rem
    max-width: 75rem
    width 100%
    &_footer
      width 80%
      text-align center
      margin 0 auto
  &__quad
    display block
    padding 2rem 4.8rem
    border 0.3rem solid #1174BF
    position relative
    font-family Roboto
    font-weight 500
    font-size 1.4rem
    line-height 1.6rem
    text-align center
    margin 4rem 0 2rem
    &:before
      content ''
      position absolute
      height: calc(100% + 4rem);
      width: calc(100% - 4.4rem);
      top 0
      left 0
      z-index 0
      transform: translate(2rem, -2rem)
      border 0.1rem solid #BCD5E8

@media (max-width: 1024px)
  .about-company
    &__sidebar
      display none
    &__content
      flex-basis 100%
    &__title
      font-size 2.4rem
      line-height 3.8rem
    &__text
      font-size 1.4rem
    &__okay
      font-size 1.4rem
    &__quad
      font-size 1.4rem
@media (max-width: 566px)
  .about-company
    &__sidebar
      display none
    &__content
      flex-basis 100%
    &__title
      font-size 1.2rem
      line-height 2rem
    &__text
      font-size 1.2rem
    &__okay
      font-size 1.2rem
    &__quad
      font-size 1.2rem
      width: 100%
