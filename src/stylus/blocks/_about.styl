.about
  padding 10rem 0
  background url('../images/bg-about.jpg') center center no-repeat
  background-size cover
  &__text
    text-align: center
    font-size 1.7rem
    color white
    line-height: 3rem
    font-family: Roboto
    font-weight: 400
    margin-bottom 7rem
  &__subtitle
    font-size 3rem
    text-align: center
    font-family: RobotoSlab
    font-weight: 700
    color white
    margin-bottom 6rem
  &__elements
    display flex
    justify-content: space-between
    align-items: flex-start
    margin-bottom 9rem
    flex-wrap wrap
  &__element
    flex-basis 25%
    color white
    text-align: center
  &__ficha
    color white
  &__img
    margin-bottom 2.4rem
  &__descript
    font-size 1.6rem
    font-family Roboto
    font-weight: 400
    line-height 2.4rem
  &__inner
    text-align: center


