.about
  padding 10rem 0
  background url('../images/bg-about.jpg') center center no-repeat
  background-size cover
  &__text
    text-align: center
    font-size 1.7rem
    color white
    line-height: 3rem
    font-family: Roboto
    font-weight: 400
    margin-bottom 7rem
  &__subtitle
    font-size 3rem
    text-align: center
    font-family: RobotoSlab
    font-weight: 700
    color white
    margin-bottom 6rem
  &__elements
    display flex
    justify-content: space-between
    align-items: flex-start
    margin-bottom 9rem
    flex-wrap wrap
  &__element
    flex-basis 25%
    color white
    text-align: center
  &__ficha
    color white
  &__img
    margin-bottom 2.4rem
  &__descript
    font-size 1.6rem
    font-family Roboto
    font-weight: 400
    line-height 2.4rem
  &__inner
    text-align: center


@media (max-width:1024px)
  .about
    padding 7rem 0
    &__text
      font-size 1.4rem
      margin-bottom 5rem
    &__subtitle
      font-size 2.4rem
      margin-bottom 4.8rem
    &__ficha
      font-size 1.6rem
      margin-bottom 2rem
      line-height 2.4rem
    &__descript
      font-size 1.4rem
      line-height 2.2rem
    &__element
      flex-basis 42%
      margin-bottom 3rem
      &:first-child
        margin-right 5rem
    &__elements
      justify-content: center
      margin-bottom 6rem

@media (max-width:566px)
  .about
    padding 7rem 0
    &__text
      font-size 1.2rem
      margin-bottom 3rem
    &__subtitle
      font-size 1.8rem
      margin-bottom 3.8rem
    &__ficha
      font-size 1.4rem
      margin-bottom 1.8rem
      line-height 2.2rem
    &__descript
      font-size 1.2rem
      line-height 2.0rem
    &__element
      flex-basis 100%
      margin-bottom 3.4rem
      &:first-child
        margin-right 0rem
    &__elements
      justify-content: center
      margin-bottom 4rem
