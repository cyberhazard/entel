
.sidebar-product
  width 100%
  flex-basis 26%
  margin-bottom 4rem
  &__wrapper
    overflow hidden
    transition: height .5s
  &__header
    width 100%
    font-family Roboto
    font-weight 700
    font-size 1.6rem
    color white
    background: #1174BF
    line-height 1.9rem
    padding 2rem 2rem
    text-align: center
  &__title
    font-family Roboto
    font-weight 700
    font-size 1.6rem
    line-height 2.4rem
    color black
    padding 1.6rem 3rem
    border-bottom 1px solid #D7D7D7
    background: white
    &_active
      background: #F3F3F3
  &__item
    width 100%
    font-family Roboto
    font-weight 700
    font-size 1.6rem
    cursor pointer
  &__content
    display none
    padding 1.6rem 3rem
    font-family Roboto
    font-weight 400
    line-height 1.6rem
    font-size 1.4rem
    background: white
    border-bottom 1px solid #D7D7D7
  &__text
    position: relative
    padding-left 1rem
    margin-bottom 1.6rem
    color black
    &:last-child
      margin-bottom 0
    &:before
      content: ''
      width 5px
      height 5px
      background #1174BF
      position absolute
      left 0
      top 0.6rem


.sidebar-product__item_active > .sidebar-product__title
  background: #F3F3F3
.sidebar-product__item_active > .sidebar-product__content
  display block
