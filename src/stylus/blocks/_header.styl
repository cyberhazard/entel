.header
  padding 3rem 0
  border-bottom 1px solid #E2E2E2
  &__container
    display flex
    justify-content: space-between
    align-items: center
  &__nav
    display flex
    justify-content: space-between
    align-items: center
  &__li
    font-family: Roboto
    font-weight: 400
    font-size 1.6rem
    list-style-type none
    margin-right 4rem
    position: relative
    & a
      color #BEBEBE
    &_active
      & a
        color black
      &:after
        content ''
        bottom -0.6rem
        left 0
        width 100%
        height 0.2rem
        background-color #1174BF
        position: absolute
  &__tel
    display: block
    font-size 1.8rem
    font-family: Roboto
    font-weight: 400
    color black
    margin-bottom 2rem
    & span
      font-weight: 700
  &__callback
    display: inline-block
    font-family: Roboto
    font-weight: 500
    font-size 1.3rem
    color #1174BF
    border-bottom 1px dotted #1174BF
    position: relative
    cursor pointer
    float:right
    &:before
      content ''
      left -2.4rem
      top 0
      background url('../images/phone-call.png') center center no-repeat
      background-size contain
      width 16px
      height: 16px
      position absolute

@media (max-width: 1175px)
  .header
    &__li
      font-size 1.4rem
      margin-right 2.4rem
@media (max-width: 1024px)
  .header
    &__nav
      display none
